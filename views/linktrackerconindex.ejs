<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Link</h1>
    <ol class="breadcrumb">
        <a href="#" class="btn px-15 btn-primary" data-toggle="modal" data-target="#add_new_vpn"><i
                class="las la-plus fs-16"></i>Add Link</a>
        <div class="modal fade new-member" id="add_new_vpn" tabindex="-1" aria-labelledby="staticBackdropLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content  radius-xl">
                    <div class="modal-header">
                        <h6 class="modal-title fw-500" id="staticBackdropLabel">Create Link</h6>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <i class="far fa-times-circle"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="new-member-modal">
                            <form method="POST" action="/admin/linktracker">
                                <div class="form-group mb-10">
                                    <label for="name47">Package Name</label>
                                    <input type="text" name="package" class="form-control" id="package">
                                </div>
                                <div class="form-group mb-10">
                                    <label for="name47">Link</label>
                                    <input type="text" name="link" class="form-control" id="link">
                                </div>

                                <div class="button-group d-flex pt-25">
                                    <button class="btn btn-primary btn-default btn-squared text-capitalize">add new
                                        Link</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </ol>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="table-responsive p-3">
                <table class="table align-items-center table-flush table-hover" id="dataTableHover">
                    <thead class="thead-light">
                        <tr>
                            <th style="width: 10%;">id</th>
                            <th style="width: 20%;">Redirect</th>
                            <th style="width: 20%;">Link</th>
                            <th style="width: 10%;">Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th style="width: 10%;">id</th>
                            <th style="width: 20%;">Redirect</th>
                            <th style="width: 20%;">Link</th>
                            <th style="width: 10%;">Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <% redeemdata.forEach(function(redeem){ %>
                            <tr>
                                <td>
                                    <%- redeem.linkid %>
                                </td>
                                <td>
                                    <%- redeem.link %>
                                </td>
                                <td>
                                    <%- fullUrl %>/pack/<%- redeem.linkid %>
                                </td>
                                <td>
                                    <ul style='list-style-type: none;'>
                                        <li>
                                            <a href="#" data-toggle="modal" data-target="#add_new_vpndd"><i class="far fa-edit"></i></a>
                                            <div class="modal fade new-member" id="add_new_vpndd" tabindex="-1"
                                                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content  radius-xl">
                                                        <div class="modal-header">
                                                            <h6 class="modal-title fw-500" id="staticBackdropLabel">Edit Link</h6>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="far fa-times-circle"></i></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="new-member-modal">
                                                                <form method="POST" action="/admin/updatelink">
                                                                    <div class="form-group mb-10">
                                                                        <label for="name47">Link ID</label>
                                                                        <input type="text" name="linkid" class="form-control" id="package" value="<%- redeem.linkid %>">
                                                                    </div>
                                                                    <div class="form-group mb-10">
                                                                        <label for="name47">Link</label>
                                                                        <input type="text" name="link" class="form-control" id="link" value="<%- redeem.link %>">
                                                                    </div>

                                                                    <div class="button-group d-flex pt-25">
                                                                        <input type="hidden" name="id" class="form-control" id="link" value="<%- redeem._id %>">
                                                                        <button class="btn btn-primary btn-default btn-squared text-capitalize">Edit</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <a href="/admin/linktrackerdelete/<%- redeem.linkid %>" class="remove"><i class="far fa-trash-alt"></i></a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                            
                            <% }) %>
                            
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>